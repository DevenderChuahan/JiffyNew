<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/power_bottom_sheet"
    android:clickable="true"
    android:visibility="gone"
    android:focusable="true"
    android:background="@drawable/rounded_dialog"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="306dp">
    <ImageView
        android:layout_width="80dp"
        android:background="#4d545a"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="18dp"

        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/tv_location_name"
                    android:fontFamily="@font/futura_medium"
                    android:textColor="#e2e2e2"
                    android:text="Appolo Hospital"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="#8c8d8e"
                    android:letterSpacing="0.02"
                    android:text="Mirrors Luxury Salon, Jubliee Hills Road"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#25d0fc"
                    android:id="@+id/feedbackTv"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/give_us_feedback"
                    android:letterSpacing="0.02"
                    />

            </LinearLayout>



        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#4b4949"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:weightSum="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/ios_bitmap"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/rubik_regular"
                        android:textColor="#8c8d8e"
                        android:letterSpacing="0.02"
                        android:text="iOS"
                        />


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#8c8d8e"
                        android:fontFamily="@font/rubik_regular"
                        android:letterSpacing="0.02"
                        android:text="@string/device_name"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/orderNumberTv"
                        android:layout_marginTop="2dp"
                        android:textColor="#e2e2e2"
                        android:fontFamily="@font/futura_medium"
                        android:text="20002334627sas"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#e2e2e2"
                        android:id="@+id/orderRateTv"
                        android:layout_marginTop="5dp"
                        android:text="First 5 minuits Free. Then â‚¹20/per hour."
                        />

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#171821"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="27dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#25d0fc"
                    android:fontFamily="@font/rubik_regular"
                    android:letterSpacing="0.02"
                    android:text="@string/duration"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/orderUsingTimeTv"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/futura_medium"
                        android:textColor="#e2e2e2"
                        android:text="1835"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/futura_medium"
                        android:textColor="#e2e2e2"
                        android:text="@string/min"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#8c8d8e"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/rubik_regular"
                    android:letterSpacing="0.02"
                    android:text="Total time of usage"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#25d0fc"
                    android:fontFamily="@font/rubik_regular"
                    android:letterSpacing="0.02"
                    android:text="@string/fee"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#e2e2e2"
                        android:text="@string/rupee"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginStart="2dp"
                        android:textColor="#e2e2e2"
                        android:id="@+id/orderUsingFeeTv"
                        android:fontFamily="@font/futura_medium"
                        android:text="120"
                        />



                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#8c8d8e"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/rubik_regular"
                    android:letterSpacing="0.02"
                    android:text="Payable amount"
                    />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>