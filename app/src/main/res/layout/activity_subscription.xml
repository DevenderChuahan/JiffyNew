<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#101010"
    tools:context=".view.subscriptions.SubscriptionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#34353b"
        android:gravity="start|center"
        android:layout_height="68dp">
        <LinearLayout
            android:layout_width="48dp"
            android:gravity="center"
            android:layout_marginStart="17dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/subscription_back"
            android:focusable="true"
            android:layout_marginLeft="17dp">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/path_3"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/futura_medium"
            android:textColor="#e2e2e2"
            android:text="Subscriptions"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="17dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/futura_medium"
            android:textColor="#e2e2e2"
            android:text="Active Plans"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="#8c8d8e"
            android:fontFamily="@font/rubik_regular"
            android:letterSpacing="0.02"
            android:text="No Active Subscription"
            />
        <ImageView
            android:layout_width="match_parent"
            android:background="#4b4949"
            android:layout_marginTop="40dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            android:textColor="#e2e2e2"
            android:fontFamily="@font/futura_medium"
            android:text="Options"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_subscription"
                app:layoutManager= "androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="match_parent"/>




        </LinearLayout>



    </LinearLayout>

</LinearLayout>