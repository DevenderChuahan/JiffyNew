<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.revert.RevertActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_walletfrag"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#34353b"
                android:gravity="start|center"
                android:layout_height="68dp">
                <LinearLayout
                    android:layout_width="48dp"
                    android:gravity="center"
                    android:layout_marginStart="17dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/revert_back"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/path_3"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/futura_medium"
                    android:textColor="#e2e2e2"
                    android:text="@string/return_amp_pay" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#101010"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="17dp"
                        android:orientation="vertical"
                        android:id="@+id/ivbnkcard"
                        android:background="@drawable/notification_background"
                        android:layout_height="264dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#8c8d8e"
                                android:fontFamily="@font/rubik_regular"
                                android:letterSpacing="0.02"
                                android:text="@string/device_name"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:id="@+id/orderTv"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/futura_medium"
                                android:textColor="#e2e2e2"
                                android:text="20002334627sas"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="32dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/futura_medium"
                                    android:textColor="#e2e2e2"
                                    android:text="@string/total_fee"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_weight="1"
                                    android:textColor="#e2e2e2"
                                    android:gravity="end"
                                    android:id="@+id/totalFeeTv"
                                    android:fontFamily="@font/futura_medium"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="14dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/futura_medium"
                                    android:layout_weight="1"
                                    android:textColor="#e2e2e2"
                                    android:text="@string/duration_of_usage"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_weight="1"
                                    android:id="@+id/tv_duration"
                                    android:fontFamily="@font/futura_medium"
                                    android:textColor="#e2e2e2"
                                    android:gravity="end"
                                    />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="22dp"
                                android:background="#4b4949" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="22dp"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/futura_medium"
                                        android:textColor="#e2e2e2"
                                        android:text="@string/my_offer"
                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:layout_marginStart="5dp"
                                        android:textColor="#8c8d8e"
                                        android:text="@string/rupee"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:id="@+id/coupns_tv"
                                        android:layout_marginStart="2dp"
                                        android:textColor="#8c8d8e"
                                        android:fontFamily="@font/futura_medium"
                                        android:gravity="end"
                                        android:text="@string/no_available_offers"
                                        />
                                </LinearLayout>



                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="22dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/futura_medium"
                                    android:layout_weight="1"
                                    android:textColor="#e2e2e2"
                                    android:text="@string/order_details"
                                    />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:id="@+id/orderdetails"
                                    android:textColor="#25d0fc"
                                    android:letterSpacing="0.02"
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/futura_medium"
                                    android:text="@string/view"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/ivbnkcard"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="17dp"
                        android:layout_height="wrap_content">
                        <fragment
                            android:layout_width="match_parent"
                            android:id="@+id/walletpay_fragment"
                            android:layout_height="wrap_content"
                            android:name="in.jiffycharge.gopower.view.walletpay.WalletPay"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/rounded_dialog2"
                        android:layout_height="84dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="22dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/futura_medium"
                                    android:textColor="#e2e2e2"
                                    android:text="@string/pay"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:layout_marginStart="5dp"
                                    android:textColor="#e2e2e2"
                                    android:text="@string/rupee"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:id="@+id/needPayTv"
                                    android:layout_marginStart="2dp"
                                    android:fontFamily="@font/futura_medium"
                                    android:textColor="#e2e2e2"
                                    tools:text="120"
                                    />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:id="@+id/couponTv"
                                android:fontFamily="@font/rubik_regular"
                                android:layout_marginTop="7dp"
                                android:textColor="#25d0fc"
                                android:letterSpacing="0.02"
                                android:text="Apply Coupon"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:id="@+id/payBt"
                                app:drawableTint="@color/colorPrimary"
                                android:textColor="#25d0fc"
                                android:fontFamily="@font/rubik_regular"
                                android:letterSpacing="0.02"
                                android:text="@string/pay_now"
                                android:drawablePadding="10dp"
                                app:drawableEndCompat="@drawable/right_arrow" />


                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>











</LinearLayout>